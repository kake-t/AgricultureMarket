<div class="container">

  <%= form_with model: [item, comment] do |f| %>
  <% if comment.errors.any? %>
  <ul>
    <% comment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


    <div class="field">
      <%= f.text_area :content %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</div>
