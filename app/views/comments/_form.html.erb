<div class="container">
  <%= form_with model: [item, comment], local: true do |f| %>
    <% if comment.errors.any? %>
    <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

    <div class="">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="">
      <%= f.submit %>
    </div>

  <% end %>
</div>
