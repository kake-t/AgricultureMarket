<div class="container">

  <%= form_with model: producer, local: true, url: choose_new_or_edit do |f| %>
    <div class="">
      <%= f.label :producer_image %>
      <%= f.file_field :producer_image %>
    </div>

    <div class="">
      <%= f.label :area %>
      <% if producer.area.nil? %>
        <%= f.collection_select :area, JpPrefecture::Prefecture.all, :name, :name %>
      <% else %>
        <%= producer.area %>
      <% end %>
    </div>

    <div class="">
      <%= f.label :pesticide %>
      <% if producer.pesticide.nil? %>
        <label><%= f.radio_button :pesticide, false %>有り</label>
        <label><%= f.radio_button :pesticide, true %>無し</label>
      <% else %>
        <%= indicate_pesticide %>
      <% end %>
    </div>

    <div class="">
      <%= f.label :content %>
      <%= f.text_area :content %>
    </div>

    <div class="">
      <%= f.submit data: {confirm: "※登録後削除できません\nまた、生産地、農薬の有無は変更できません。\n登録してよろしいですか？"}%>
    </div>
  <% end %>

</div>
