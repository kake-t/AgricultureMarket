<%# ユーザー詳細画面 %>
<div class="container">

<%# user のデータ %>
<%= render 'users/params', user: @user %>

  <% if current_user == @user %>
    <div class="">
      <%= link_to 'ユーザー情報編集', edit_user_registration_path %>
    </div>
  <% end %>

  <div class="margin-top-20">
    <%# 生産者情報を持っている時、生産者情報を表示する %>
    <% if @user.producer.present? %>
      <div class="card h-10">
        <h5>生産者情報</h5>
        <%= render 'producers/params', producer: @producer %>
      </div>
    <% end %>
  </div>

  <%= render 'users/links' %>

</div>
