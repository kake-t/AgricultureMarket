<div class="container">
  <% #エラーメッセージ %>
  <% if item.errors.any? %>
    <div class="">
      <% item.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

<% #入力フォーム %>
  <%= form_with model: item, local: true, url: choose_url_new_or_edit, method: choose_method_new_or_edit do |form| %>
    <div class="">
      <%= image_tag item.item_image %>
      <%= image_tag @item_image.item_image.url if @item_image.present? %>
    </div>

    <div class="">
      <%= form.label :item_name %>
      <%= form.text_field :item_name %>
    </div>

    <div class="">
      <%= form.label :item_image %>
      <%= form.file_field :item_image %>
      <%= form.hidden_field :image_cache %>
    </div>

    <div class="">
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>

    <div class="">
      <%= form.label :item_content %>
      <%= form.text_area :item_content %>
    </div>

    <div class="">
      <%= form.submit %>
    </div>
  <% end %>
</div>
