<div class="container">
  <%#エラーメッセージ %>
  <% if item.errors.any? %>
    <div class="">
      <% item.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

<%#入力フォーム %>
  <%= form_with model: item, local: true, url: choose_url_new_or_edit, method: choose_method_new_or_edit do |f| %>
    <div class="">
      <%= image_tag item.item_image %>
    </div>

    <div class="">
      <%= f.label :item_name %>
      <%= f.text_field :item_name %>
    </div>

    <div class="">
      <%= f.label :item_image %>
      <%= f.file_field :item_image %>
      <%= f.hidden_field :item_image_cache %>
    </div>

    <div class="">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>

    <div class="">
      <%= f.label :item_content %>
      <%= f.text_area :item_content %>
    </div>

    <div class="">
      <%= f.submit %>
    </div>
  <% end %>
</div>
