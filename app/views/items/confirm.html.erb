<div class="container">
  <%= form_with model: @item, local: true, url: choose_create_or_update, method: choose_post_or_pacth do |form| %>
    <div class="">
      <%= image_tag @item.item_image.url %>
    </div>

    <div class="">
      <%= form.label :item_name %>
      <%= form.hidden_field :item_name %>
      <%= @item.item_name %>
    </div>

    <div class="">
      <%= hidden_field_tag :"cache[item_image]", @item.item_image.cache_name %>
    </div>

    <div class="">
      <%= form.label :price %>
      <%= form.hidden_field :price %>
      <%= @item.price %>
    </div>

    <div class="">
      <%= form.label :item_content %>
      <%= form.hidden_field :item_content %>
      <%= @item.item_content %>
    </div>

    <div class="">
      <%= form.submit 'はい' %>
    </div>
  <% end %>

<%#戻るボタン %>
  <div class="">
    <%= form_with model: @item, local: true, url: back_new_or_edit, method: :get do |form| %>
      <%= form.hidden_field :item_name %>
      <%= form.hidden_field :price %>
      <%= form.hidden_field :item_content %>
      <%= hidden_field_tag :"item[item_image]", @item.item_image.cache_name %>
      <%= form.submit 'いいえ', name: :back %>
    <% end %>
  </div>
</div>
