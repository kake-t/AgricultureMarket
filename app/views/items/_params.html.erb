<table>
  <tr>
    <td><%= image_tag item.item_image %></td>
  </tr>

  <tr>
    <td>商品名：<%= item.item_name %></td>
  </tr>

  <tr>
    <td>価格：<%= item.price %>円</td>
  </tr>

  <tr>
    <td>出品時間：<%= item.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
  </tr>

  <tr>
    <td>生産者
    <%= link_to "#{item.seller.user_name}", user_path(item.seller) %></td>
  </tr>

  <tr>
    <td>生産地：<%= item.seller.producer.area %></td>
  </tr>

  <tr>
    <th>詳細</th>
  </tr>

  <tr>
    <td><%= simple_format item.item_content %></td>
  </tr>
</table>
