<div class="container">
  <% items.each do |item| %>
    <%= form_with model: item, local: true do |f| %>
      <% next if item.buyer_id.present? unless skip_actions %>
      <div class="">
        <%= f.label :item_name %>
        <%= item.item_name %>
      </div>

      <div class="">
        <%= link_to image_tag(item.item_image_url), user_path(item.seller.id) %>
      </div>

      <% unless item.buyer_id.nil? %>
        <h4>出品終了</h4>
      <% end %>

      <div class="">
        生産者：
        <%= link_to item.seller.user_name, user_path(item.seller.id) %>
      </div>

      <div class="">
        生産地：
        <%= item.seller.producer.area %>
      </div>

      <div class="">
        <%= f.label :price %>
        <%= item.price %>円
      </div>

      <div class="">
        <%= item.item_content %>
      </div>

      <div class="">
        <%= link_to '詳細', item %>
      </div>

      <%= render 'items/edit_and_destroy', item: item %>

    <% end %>
  <% end %>
</div>
